let
  Source = Excel.Workbook(File.Contents("\\PDC-AIP-DATA\ETS_ESSBASE_GCM_NAS_T3_PROD01\Power BI Reporting\Topline\State Cohorts.xlsx"), null, true),
  Navigation = Source{[Item = "Home", Kind = "Sheet"]}[Data],
  #"Promoted headers" = Table.PromoteHeaders(Navigation, [PromoteAllScalars = true]),
  #"Removed other columns" = Table.SelectColumns(#"Promoted headers", {"Concat", "State", "Brand", "NB Color", "NB Profit Year", "RB Profit Year", "Cohort Version"}),
  #"Added LOB Rollup" = Table.AddColumn(#"Removed other columns", "LOB Rollup", each "Property"),
  #"Added Cohort Index" = Table.AddColumn(#"Added LOB Rollup", "Cohort Index", each [Brand] & [LOB Rollup] & [State]),
  #"Replaced value 1" = Table.ReplaceValue(#"Added Cohort Index", "(exiting)", "6 - Exiting", Replacer.ReplaceText, {"NB Color"}),
  #"Replaced value 2" = Table.ReplaceValue(#"Replaced value 1", null, "6 - Exiting", Replacer.ReplaceValue, {"NB Color"}),
  #"Split column by delimiter" = Table.SplitColumn(#"Replaced value 2", "NB Color", Splitter.SplitTextByDelimiter("-"), {"NB Color.1", "NB Color.2"}),
  #"Renamed columns" = Table.RenameColumns(#"Split column by delimiter", {{"NB Color.2", "Cohort Color"}, {"NB Color.1", "Cohort Order"}, {"State", "State Abbr"}}),
  #"Changed column type" = Table.TransformColumnTypes(#"Renamed columns", {{"Concat", type text}, {"Cohort Order", Int64.Type}, {"Cohort Color", type text}, {"State Abbr", type text}, {"Brand", type text}, {"NB Profit Year", type text}, {"RB Profit Year", type text}, {"Cohort Version", type date}, {"LOB Rollup", type text}, {"Cohort Index", type text}})
in
  #"Changed column type"
